<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rect_blue"
        android:layout_width="156dp"
        android:layout_height="155dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toEndOf="@+id/rect_red"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rect_blue"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/rect_green"
        android:layout_width="144dp"
        android:layout_height="148dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="@+id/rect_red"
        app:layout_constraintTop_toTopOf="@+id/rect_red"
        app:srcCompat="@drawable/rect_green" />

    <ImageView
        android:id="@+id/rect_red"
        android:layout_width="151dp"
        android:layout_height="155dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rect_red" />

    <Button
        android:id="@+id/next_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#4860E4"
        android:onClick="addListenerOnButton"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Квадрат"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/rect_blue"
        app:layout_constraintEnd_toEndOf="@+id/rect_blue"
        app:layout_constraintStart_toStartOf="@+id/rect_blue"
        app:layout_constraintTop_toTopOf="@+id/rect_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>